// CONNECT :: START

section#connect.connect

  .connect__bg
    .connect__bg-left
    .connect__bg-right

  .c-grid
    .connect__wrapper
      .connect__wrapper-left
      .connect__wrapper-right

        form.form(action="" method="" autocomplete="off")

          .form__field
            input.form__input(type="text" name="" placeholder="" input-js)
            label.form__label!= "Name"
            .form__line

          .form__field
            input.form__input(type="text" name="" placeholder="" input-js)
            label.form__label!= "Email"
            .form__line

          .form__field
            input.form__input(type="text" name="" placeholder="" input-js)
            label.form__label!= "Phone Number"
            .form__line

          .form__field-group
            .form__field
              input.form__input(type="text" name="" placeholder="" input-js)
              label.form__label!= "City"
              .form__line

            .form__field
              input.form__input(type="text" name="" placeholder="" input-js)
              label.form__label!= "Company (Optional)"
              .form__line

          .form__field
            input.form__input(type="text" name="" placeholder="" input-js)
            label.form__label!= "Message"
            .form__line

          .form__field.form__field-textarea.is-focus
            textarea.form__textarea(name="" placeholder="What do you want your app to do? What specific features do you have in mind? Which platform(s) are you interested in? (iOS, Android, Windows). Do you have a deadline? What does your budget look like?" input-js)
            label.form__label!= "Your Message"
            .form__line

          .form__field-btn
            +btn("form__btn connect__btn", "Send message")


// CONNECT :: END